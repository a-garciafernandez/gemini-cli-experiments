{
  "general": {
    "preferredEditor": "vscode"
  },
  "ui": {
    "theme": "Default"
  },
  "model": {
    "name": "gemini-2.5-flash"
  },
  "context": {
    "fileName": ["GEMINI.md"]
  },
  "mcpServers": {
      "mcp-atlassian": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "JIRA_URL=https://celonis.atlassian.net",
        "-e", "JIRA_USERNAME=a.garciafernandez@celonis.com",
        "-e", "JIRA_API_TOKEN",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    }
  }
}
